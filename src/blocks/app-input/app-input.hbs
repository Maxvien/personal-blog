{{#is tag "input"}}
  <input class="{{#if class}}{{class}} {{/if}}app-input" type="{{type}}" placeholder="{{placeholder}}" />
{{/is}}

{{#is tag "textarea"}}
  <textarea class="{{#if class}}{{class}} {{/if}}app-input" {{#if cols}}cols="{{cols}}"{{/if}} rows="{{rows}}" placeholder="{{placeholder}}"></textarea>
{{/is}}
